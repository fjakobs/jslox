{
    "name": "lox-lsp",
    "displayName": "Lox LSP",
    "description": "LSP server for the lox language",
    "version": "0.0.1",
    "publisher": "fjakobs",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/fjakobs/jslox"
    },
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:lox"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "lox",
                "aliases": [
                    "Lox",
                    "lox"
                ],
                "extensions": [
                    ".lox"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lox",
                "scopeName": "source.lox",
                "path": "./syntaxes/lox.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "package": "vsce package",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "fix": "prettier --write '**/*.{ts,js,json,md}'",
        "lint": "eslint src --ext ts && prettier --check '**/*.{ts,js,json,md}'",
        "test": "npm run lox:test && npm run ext:test",
        "ext:test": "node ./out/test/runTest.js",
        "lox": "ts-node src/jslox/main.ts",
        "lox:generate": "ts-node src/jslox/astGenerator.ts > src/jslox/Expr.ts",
        "lox:test": "ts-mocha 'src/jslox/**/*.test.ts'"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.77.0",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "@vscode/test-electron": "^2.3.0",
        "@vscode/vsce": "^2.18.0",
        "eslint": "^8.36.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "prettier": "^2.8.7",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0",
        "vscode-languageserver": "^8.1.0",
        "vscode-languageserver-textdocument": "^1.0.8"
    }
}
